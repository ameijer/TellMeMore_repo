<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <Button 
        android:id="@+id/makeExampleDB"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:text="make example DB" 
        
        />
    
    <Button 
        android:id="@+id/makePosterDB"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="make DB for TMMPoster" 
    android:layout_below="@id/makeExampleDB"    
        />
    
    <Button 
        android:id="@+id/deleteExampleDB"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="delete example DB" 
    android:layout_below="@id/makePosterDB"    
        />
    
    <Button 
        android:id="@+id/deletePosterDB"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="delete DB for TMMPoster" 
    android:layout_below="@id/deleteExampleDB"    
        />

</RelativeLayout>
